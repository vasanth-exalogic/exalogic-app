<%= form_for @additional do |f|%>
<table class="table table-striped table-dark">
  <% if session[:temp]=='edit' %>
    <tr>
      <td class="" style="vertical-align:middle;"><a href="<%= edit_user_path(@emergency) %>" style="color:grey; text-decoration:none;">Login Details</a></td>
      <td class="" style="vertical-align:middle;"><a href="<%= edit_detail_path(@emergency) %>" style="color:grey; text-decoration:none;">Personal Details</a></td>
      <td class="active-tab" style="vertical-align:middle;"><a href="#" style="color:white; text-decoration:none;">Additional Details</a></td>
      <td class="" style="vertical-align:middle;"><a href="<%= edit_account_path(@emergency) %>" style="color:grey; text-decoration:none;">Accountails</a></td>
    </tr>
  <% else %>
    <tr>
      <td class="" style="vertical-align:middle; color:grey;">Login Details</td>
      <td class="" style="vertical-align:middle; color:grey;">Personal Details</td>
      <td class="active-tab" style="vertical-align:middle;">Additional Details</td>
      <td class="" style="vertical-align:middle; color:grey;">Account Details</td>
    </tr>
  <% end%>
        <tr>
          <td><%= f.label "Emergency Contact Name "%><font color="white">*</font></td>
          <td><%= f.text_field :ename%><span style="color:white;"><%= @detail.errors[:ename][0] rescue nil%></span></td>
          <td><%= f.label "Relation"%></td>
          <td><%= f.select :relation, ['Relation','Parent','Spouse','Friend','Others']%></td>
        </tr>
        <tr>
          <td><%= f.label "Emergency Contact Number "%><font color="white">*</font></td>
          <td><%= f.text_field :econtact, :pattern=>'\d*', :maxlength=>10, :minlength=>10%></td>
          <td><%= f.label "Primary Skill"%></td>
          <td><%= f.text_field :pskill%></td>
        </tr>
        <tr>
          <td><%= f.label "Secondary Skill 1"%></td>
          <td><%= f.text_field :sskill1%></td>
          <td><%= f.label "Secondary Skill 2"%></td>
          <td><%= f.text_field :sskill2%></td>
        </tr>
        <tr>
          <td><%= f.label "Notice period in days"%></td>
          <td><%= f.number_field :notice, :min=>0%></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td><%= f.submit "Next" %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
</table>
<pre>
</pre>
<% end%>
