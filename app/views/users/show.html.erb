<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="container">
      <pre>
<div class="font-beba">
  <%= @detail.empid%></div><div class="font-beba-small">
  <table class="table table-striped table-dark">
            <tr>
              <td>First Name</td><td><%= @detail.fname%></td>
              <td>Last Name</td><td><%= @detail.lname%></td>
            </tr>
            <tr>
              <td>Date of Birth</td><td><%= @detail.dob%></td>
              <% if @detail.dob!=nil%>
                <td>Age</td><td><%= ((Date.today-@detail.dob.to_date)/365).to_i%></td>
              <% else%>
                <td>Age</td><td></td>
              <% end%>
            </tr>
            <tr>
              <td>Date of Joining</td><td><%= @detail.doj%></td>
              <td>Blood Group</td><td><%= @detail.bloodgroup%></td>
            </tr>
            <tr>
              <td>Contact</td><td><%= @detail.contact%></td>
              <td>Email</td><td><%= @user.email%></td>
            </tr>
            <tr>
              <td>Address</td><td><%= @detail.address%></td>
              <td>City</td><td><%= @detail.city%></td>
            </tr>
            <tr>
              <td>State</td><td><%= @detail.state%></td>
              <td>Country</td><td><%= @detail.country%></td>
            </tr>
            <tr>
              <td>Pincode</td><td><%= @detail.pincode%></td>
              <td>Notice period in days</td><td><%= @additional.notice%></td>
            </tr>
            <tr>
              <td>additional Contact Name</td><td><%= @additional.ename%></td>
              <td>Relation</td><td><%= @additional.relation%></td>
            </tr>
            <tr>
              <td>additional Contact Number</td><td><%= @additional.econtact%></td>
              <td>Gender</td><td><%= @detail.gender%></td>
            </tr>
            <tr>
              <td>Primary Skill</td><td><%= @additional.pskill%></td>
              <td>Secondary Skill 1</td><td><%= @additional.sskill1%></td>
            </tr>
            <tr>
              <td>Secondary Skill 2</td><td><%= @additional.sskill2%></td>
              <td></td><td></td>
            </tr>
            <tr>
              <td colspan="4" align="center" style="font-size:30px;">BANK DETAILS</td>
            </tr>
            <tr>
              <td>Account Name</td><td><%= @account.accname%></td>
              <td>Account Number</td><td><%= @account.accno%></td>
            </tr>
            <tr>
              <td>Bank</td><td><%= @account.bank%></td>
              <td>Branch</td><td><%= @account.branch%></td>
            </tr>
            <tr>
              <td>IFSC Code</td><td><%= @account.ifsc%></td>
              <td></td><td></td>
            </tr>
            <% if session[:user_type]=='admin'%>
            <tr>
              <td><%= link_to "Edit User", edit_user_path(@user)%></td>
              <td><%= link_to "Generate Pay Slip", new_payslip_path(@user)%></td>
              <td><%= link_to "View Pay Slips", all_payslips_path(@user)%></td>
              <td><%= link_to "Delete User", user_path(@user), method: :delete, data: {confirm: "Are you sure?"}%></td>
            </tr>
            <% end%>
            <% if session[:user_type]=='user'%>
            <tr>
              <td><%= link_to "View Pay Slips", all_payslips_path(@user)%></td>
            </tr>
            <% end%>
        </table>
      </div>
  </body>
</html>
